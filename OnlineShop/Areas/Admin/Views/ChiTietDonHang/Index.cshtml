@model IEnumerable<OnlineShop.Database.EF.chitietdonhang>
@using PagedList.Mvc
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@section Header{
    <div class="page-header">
        <h1>Xem danh sách chi tiết đặt hàng</h1>
    </div>
}

<div class="row">
    @using (@Html.BeginForm("Index", "ChiTietDatHang", FormMethod.Get))
    {
        <div class="col-md-5 ">
            <div class="input-group">
                <input type="text" name="searchStr" class="form-control" placeholder="Từ khóa" value="@ViewBag.searchStr" />
                <span class="input-group-addon"><i class="fa fa-search" aria-hidden="true"></i></span>
            </div>
        </div>
    }
</div>
<br />
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.soluong)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.thanhtien)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.soluong)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.thanhtien)
        </td>
        <td>
            <a href="/Admin/ChiTietDonHang/Details/@item.hoadonma">
                <i class="fa fa-info-circle" aria-hidden="true">   </i>
            </a>
            <a href="/Admin/ChiTietDonHang/Delete/@item.hoadonma">
                <i class="fa fa-trash-o" aria-hidden="true">   </i>
            </a>
        </td>
    </tr>
}

</table>
