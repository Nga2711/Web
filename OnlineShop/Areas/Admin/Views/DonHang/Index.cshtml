@model IEnumerable<OnlineShop.Database.EF.donhang>
@using PagedList.Mvc
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@section Header{
    <div class="page-header">
        <h1>Xem danh sách đơn hàng</h1>
    </div>
}

<div class="row">
    @using (@Html.BeginForm("Index", "DonDatHang", FormMethod.Get))
    {
        <div class="col-md-5 ">
            <div class="input-group">
                <input type="text" name="searchStr" class="form-control" placeholder="Từ khóa" value="@ViewBag.searchStr" />
                <span class="input-group-addon"><i class="fa fa-search" aria-hidden="true"></i></span>
            </div>
        </div>
    }
</div>
<br />
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ngaylap)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ngaygiao)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.diadiemgiao)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.phivanchuyen)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.tonggia)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.khachhangma)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.trangthai)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.ngaylap)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ngaygiao)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.diadiemgiao)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.phivanchuyen)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.tonggia)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.khachhangma)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.trangthai)
        </td>
        <td>
            <a href="/Admin/DonHang/Update/@item.ma">
                <i class="fa fa-refresh" aria-hidden="true"></i>
            </a>
            <a href="/Admin/DonHang/Details/@item.ma">
                <i class="fa fa-info-circle" aria-hidden="true">   </i>
            </a>
            <a href="/Admin/DonHang/Delete/@item.ma">
                <i class="fa fa-trash-o" aria-hidden="true">   </i>
            </a>
        </td>
    </tr>
}

</table>
