@using OnlineShop.Database.EF;
@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    var loaisanpham = (loaisanpham)ViewBag.lsp;
}


<div class="col-md-12 col-sm-12 col-xs-12">

    <div class="x_panel">
        <div class="x_title">
            <h2>Sửa sản phẩm </h2>

            <div class="clearfix"></div>
        </div>
        <div class="x_content">
            <form action="Edit" method="post" class="form-horizontal form-label-left" enctype="multipart/form-data" novalidate>
                <input type="hidden" name="ma" value="@loaisanpham.ma" />
                <div class="item form-group">
                    <label class="control-label col-md-3 col-sm-3 col-xs-12" for="name">
                        Tên loại sản phẩm <span class="required">*</span>
                    </label>
                    <div class="col-md-6 col-sm-6 col-xs-12">
                        <input id="name" class="form-control col-md-7 col-xs-12" data-validate-length-range="6" data-validate-words="2" name="ten" placeholder="Tên sản phẩm" required="required" type="text" value="@loaisanpham.ten">
                    </div>
                </div>
             

         

            

                <div class="item form-group">
                    <label class="control-label col-md-3 col-sm-3 col-xs-12" for="occupation">
                        Danh mục <span class="required">*</span>
                    </label>
                    <div class="col-md-6 col-sm-6 col-xs-12">
                        <select class="form-control col-md-7 col-xs-12" p name="danhmucma">
                            @foreach (var item in ViewBag.dm)
                            {
                                var select = "";
                                if (item.ma == loaisanpham.danhmucma)
                                {
                                    select = "selected";
                                }
                                <option @select value="@item.ma">@item.ten</option>
                            }
                        </select>
                    </div>
                </div>

           

           



                <div class="ln_solid"></div>
                <div class="form-group">
                    <div class="col-md-6 col-md-offset-3">
                        <button type="submit" class="btn btn-primary">Sửa</button>
                        @Html.ActionLink("Trở lại danh sách", "Index", "LoaiSanPham")

                    </div>
                </div>
            </form>




        </div>
    </div>
</div>