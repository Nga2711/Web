@model PagedList.IPagedList<OnlineShop.Database.EF.sanpham_size_mausac>
@using PagedList.Mvc
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<div class="col-md-12 col-sm-12 col-xs-12">
    <div class="x_panel">
        <div class="x_title">
            <h2>Danh sách số lượng sản phẩm</h2>

            <div class="clearfix"></div>
        </div>
        @Html.ActionLink("Thêm mới", "Add", "SanPham_Size_MauSac")
        <div class="x_content">

            <table id="datatable-fixed-header" class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th>STT</th>
                        <th>Mã sản phẩm</th>
                        <th>Số lượng</th>
                        <th>Size</th>
                        <th>Màu sắc</th>
                        <th>Chức năng</th>
                    </tr>
                </thead>

                <tbody>
                    @for (var i = 0; i < Model.Count; i++)
                    {
                        <tr>
                            <td>@(i + 1)</td>
                            <td>@Model[i].sanphamma</td>
                            <td>@Model[i].soluong</td>
                            <td>@Model[i].sizema</td>
                            <td>@Model[i].mauma</td>                        
                            <td>
                                @*<a href="~/Admin/SanPham_Size_MauSac/Edit/details?sanphamma=@Model[i].sanphamma && sizema=@Model[i].sizema && mauma=@Model[i].mauma">
                <span class="glyphicon glyphicon-edit">
                </span>
            </a>*@
                                @Html.ActionLink("Sửa", "Edit", "SanPham_Size_MauSac", new {  sanphamma = Model[i].sanphamma, sizema = Model[i].sizema, mauma = Model[i].mauma }, null)/
                       
                                @Html.ActionLink("Xoá", "Delete", "SanPham_Size_MauSac", new {  sanphamma = Model[i].sanphamma, sizema = Model[i].sizema, mauma = Model[i].mauma }, null)
                                @*<a href="~/Admin/SanPham_Size_MauSac/Delete/details?sanphamma=@Model[i].sanphamma/sizema=@Model[i].sizema/mauma=@Model[i].mauma" onclick="return confirm('Bạn chắc chắn muốn xóa?')">
                                    <span class="glyphicon glyphicon-trash"></span>
                                </a>*@
                        </tr>
                    }



                </tbody>
            </table>

            <div class="col-sm-7">
                <div class="dataTables_paginate paging_simple_numbers" id="example2_paginate">
                    @Html.PagedListPager(Model, PageNum => Url.Action("Index", new { PageNum }))
                </div>
            </div>


        </div>
    </div>
</div>