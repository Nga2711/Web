@using OnlineShop.Database.EF;
@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    var sanpham = (sanpham_size_mausac)ViewBag.sss;
}

<h2>Edit</h2>

<div class="col-md-12 col-sm-12 col-xs-12">

    <div class="x_panel">
        <div class="x_title">
            <h2>Sửa số lượng sản phẩm </h2>

            <div class="clearfix"></div>
        </div>
        <div class="x_content">
            <form action="Edit" method="post" class="form-horizontal form-label-left" enctype="multipart/form-data" novalidate>
                <input type="hidden" name="sanphamma" value="@sanpham.sanphamma" />
                <input type="hidden" name="sizema" value="@sanpham.sizema" />
                <input type="hidden" name="mauma" value="@sanpham.mauma" />             
             
                <div class="item form-group">
                    <label class="control-label col-md-3 col-sm-3 col-xs-12" for="website">
                        Số lượng <span class="required">*</span>
                    </label>
                    <div class="col-md-6 col-sm-6 col-xs-12">
                        <input type="number" id="number" name="soluong" required="required" placeholder="Số lượng" value="@sanpham.soluong" class="form-control col-md-7 col-xs-12 ">
                    </div>
                </div> 

                <div class="ln_solid"></div>
                <div class="form-group">
                    <div class="col-md-6 col-md-offset-3">
                        <button type="submit" class="btn btn-primary">Sửa</button>
                        @Html.ActionLink("Trở lại danh sách", "Index", "SanPham_Size_MauSac")

                    </div>
                </div>
            </form>




        </div>
    </div>
</div>