<section>
    <div class="container">
        <div class="row">
            <div class="col-sm-3">
                @{ Html.RenderAction("left_sidebar", "DanhMuc");}
            </div>

            <div class="features_items">
                <!--features_items-->
                <h2 class="title text-center">Sản Phẩm Tìm Được</h2>

                @foreach (var item in ViewBag.itemSearch)
                {
                    <div class="col-sm-4">
                        <div class="product-image-wrapper">
                            <div class="single-products">
                                <div class="productinfo text-center">
                                    <a href="@Url.Action("ChiTietSanPham","SanPham", new { ma = item.ma },null)">
                                        <img src="~/Areas/Admin/Content/Photo/@item.anh" alt="" width="255" height="237" />
                                    </a>
                                    <h2>$@item.gia</h2>
                                    <p>@item.ten</p>
                                    @*add vao gio hang*@
                                    @*<a href="/Them-gio-hang?id=@item.ma" class="btn btn-default add-to-cart"><i class="fa fa-shopping-cart"></i>Add to cart</a>*@
                                    <a href="@Url.Action("ChiTietSanPham","SanPham", new { ma = item.ma },null)" class="btn btn-default add-to-cart"><i class="fa fa-shopping-cart"></i>Add to cart</a>

                                </div>

                            </div>

                        </div>
                    </div>
                }
            </div><!--features_items-->


            </div>
        </div>
    </div>
</section>


    