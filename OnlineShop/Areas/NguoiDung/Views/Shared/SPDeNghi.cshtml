@using OnlineShop.Database.EF;
@{
    var DSDeNghi1 = (List<OnlineShop.Database.EF.sanpham>)ViewBag.spdn1;
    var DSDeNghi2 = (List<OnlineShop.Database.EF.sanpham>)ViewBag.spdn2;
    var DSDeNghi3 = (List<OnlineShop.Database.EF.sanpham>)ViewBag.spdn3;
}



<div class="recommended_items">
    <!--recommended_items-->
    <h2 class="title text-center">Sản Phẩm Đề Xuất</h2>

    <div id="recommended-item-carousel" class="carousel slide" data-ride="carousel">
        <div class="carousel-inner">
            <div class="item active">
                @foreach (var item in DSDeNghi1)
                {
                    <div class="col-sm-4">
                        <div class="product-image-wrapper">
                            <div class="single-products">
                                <div class="productinfo text-center">
                                    <a  href="@Url.Action("ChiTietSanPham","SanPham", new { ma = item.ma },null)">
                                    <img src="~/Areas/Admin/Content/Photo/@item.anh"  alt="" width="255" height="237"/>
                                        </a>
                                    <h2>$@item.gia</h2>
                                    <p>@item.ten</p>
                                    <a href="#" class="btn btn-default add-to-cart"><i class="fa fa-shopping-cart"></i>Add to cart</a>
                                </div>

                            </div>
                        </div>
                    </div>
                }

             
             
            </div>
            <div class="item">
               @foreach (var item in DSDeNghi2)
               {
                <div class="col-sm-4">
                    <div class="product-image-wrapper">
                        <div class="single-products">
                            <div class="productinfo text-center">
                                <a href="@Url.Action("ChiTietSanPham","SanPham", new { ma = item.ma },null)">
                                    <img src="~/Areas/Admin/Content/Photo/@item.anh" alt="" width="255" height="237" />
                                    </a>
                                    <h2>$@item.gia</h2>
                                    <p>@item.ten</p>
                                    <a href="#" class="btn btn-default add-to-cart"><i class="fa fa-shopping-cart"></i>Add to cart</a>
</div>

                        </div>
                    </div>
                </div>
              
               }
            </div>

            <div class="item">
                @foreach (var item in DSDeNghi3)
                {
                    <div class="col-sm-4">
                        <div class="product-image-wrapper">
                            <div class="single-products">
                                <div class="productinfo text-center">
                                    <a href="@Url.Action("ChiTietSanPham","SanPham", new { ma = item.ma },null)">
                                        <img src="~/Areas/Admin/Content/Photo/@item.anh" href="@Url.Action("ChiTietSanPham","SanPham")" alt="" width="255" height="237" />
                                        </a>
                                        <h2>$@item.gia</h2>
                                        <p>@item.ten</p>
                                        <a href="#" class="btn btn-default add-to-cart"><i class="fa fa-shopping-cart"></i>Add to cart</a>
</div>

                            </div>
                        </div>
                    </div>

                }
            </div>

        </div>
        <a class="left recommended-item-control" href="#recommended-item-carousel" data-slide="prev">
            <i class="fa fa-angle-left"></i>
        </a>
        <a class="right recommended-item-control" href="#recommended-item-carousel" data-slide="next">
            <i class="fa fa-angle-right"></i>
        </a>
    </div>
</div><!--/recommended_items-->
